{% extends 'base.html.twig' %}

{% block title %}BDE CESI LILLE{% endblock %}
{% block stylesheets %}
<link href="admin.css" rel="stylesheet" >
<link href="event.css" rel="stylesheet" >
{% endblock %}

{% block body %}
<h1>Supprimer un evenement </h1><br>

{% if  events is defined %}
    <div id="formulaire" class="event">
        <h6 class="text">Pour supprimer un évènement, veuillez indiquer son identifiant dans la barre prévue à cet effet puis cliquez sur "supprimer".</h6><br>
        <fieldset> 
<!--Affichage d'un bouton Integer qui permet de choisir l'activité à supprimer en fonction de son identifiant-->
            {{ form_start(form) }}      
            {{ form_label(form.id)}}
            {{ form_widget(form.id)}}   
            {{ form_label(form.submit)}}
            {{ form_widget(form.submit)}}
        </fieldset>
    </div><br>
<!--Affichage de tous les évènements avec leur Id-->
    {% for event in events %}
        <div class="event">
            <img class="card-img-top" >
            <div class="card bg-primary col-lg-4 col-sm-4 mb-4" >
                <div class="card-header">{{event.date}}, {{event.place}}</div>
                <div class="card-body">
                    <p>Identifiant:{{event.id}}</p>
                    <h4 class="card-title">{{event.name}}</h4>
                    <p class="card-text">{{event.description}}.</p>
                </div>
            </div><br>
        </div>
    {% endfor %}
{% endif %}
{% endblock %}