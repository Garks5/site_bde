{% extends 'base.html.twig' %}

{% block title %}BDE CESI LILLE{% endblock %}
{% block stylesheets %}
<link href="admin.css" rel="stylesheet" >
{% endblock %}

{% block body %}
<h1>Supprimer un article de la boutique</h1>

{% if  articles is defined %}
<br>
<div >
    <fieldset> 
        {{ form_start(form) }}   
        {{ form_label(form.id)}}
        {{ form_widget(form.id)}}   
        {{ form_label(form.submit)}}
        {{ form_widget(form.submit)}}
      
    </fieldset>
</div> <br><br>

    <div class="row article">
        {% for article in articles %}
        <div class="col-lg-4 col-sm-4 mb-4 article">
        <div class="card h-100">
            <img class="card-img-top" src="{{article.picture}}" alt="">
                <div class="card-body">
                    <h4 class="card-title">
                       {{article.name}}
                    </h4>
                    <p>ID: {{article.id}}</p>
                    <h5>{{article.price}} â‚¬</h5>
                    <p class="card-text">{{article.description}}</p>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endif %}
{% endblock %}