{% extends 'base.html.twig' %}

{% block title %}BDE CESI LILLE{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="boutique.css">
{% endblock %}
{% block body %}

<div >
<div class=" container boutique">
    <div class=" boutique">
        <div class="col-lg-9 boutique">  
            <h1 class="my-4">Bienvenue sur la boutique du BDE {{ app.session.get('name') }}</h1>
            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox"> 
                   <div class="carousel-item active">
                        <img class="d-block img-fluid" src="{{top1}}" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="{{top2}}" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="{{top3}}" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
         
            <div id="formulaire">
                <fieldset> 
                    {{ form_start(form) }}
                        
                    {{ form_label(form.type)}}
                    {{ form_widget(form.type)}}
                        
                    {{ form_label(form.submit)}}
                    {{ form_widget(form.submit)}}
                  
                </fieldset>
            </div>  <br>
            <div class="container">
            {{ render(controller(
                'App\\Controller\\BoutiqueController::searchBar'
            ))}}
            </div>
        {% if  articles is defined %}
        <div class="row article">
          {% for article in articles %}
         
          <div class="col-lg-4 col-sm-4 mb-4 article">
          <div class="card h-100">
                        <a href="boutique{{article.id}}"><img class="card-img-top" src="{{article.picture}}" alt=""></a>
                        <div class="card-body">
                            <h4 class="card-title">
                            <a href="#"> {{article.name}}</a>
                            </h4>
                            <h5>{{article.price}} â‚¬</h5>
                            <p class="card-text">{{article.description}}</p>
                        </div>
                    </div>
                </div>
               {% endfor %}
            </div>
            {% endif %}
        </div>
    </div>
</div>  
</div>        
{% endblock %}