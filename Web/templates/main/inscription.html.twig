{% extends 'base.html.twig' %}

{% block title %}BDE CESI LILLE{% endblock %}

{% block stylesheets %}
<link href="inscription.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}

<div id="formulaire">
    <h3>Créer un compte</h3>
    <fieldset>
        {{ form_start(form) }}
        <div class="form-group">
            <!--
                On affiche le label de la zone nom puis la zone nom
            -->
            {{ form_label(form.name)}} 
            {{ form_widget(form.name)}}
        </div>
        <div class="form-group">
            {{ form_label(form.firstname)}}
            {{ form_widget(form.firstname)}}
        </div>
        <div class="form-group">
            {{ form_label(form.mail)}}
            {{ form_widget(form.mail)}}
        </div>
        <div class="form-group">
            {{ form_label(form.mdp)}}
            {{ form_widget(form.mdp)}}
        <small id="password" class="form-text text-muted">6 caractères dont au moins 1 majuscule et un chiffre</small>
        </div>
        <div class="form-group">
            {{ form_label(form.localisation)}}
            {{ form_widget(form.localisation)}}
        </div><br>
        <div class="form-group">
            {{ form_label(form.submit)}}
            {{ form_widget(form.submit)}}
            <p>En créant un compte, vous acceptez les conditions générales du site.<br>
            <small><a href="{{ path('mention_legale') }}">mentions légales</a></small>         
        </div><br>
        {{ form_end(form) }}
    </fieldset>
</div>

