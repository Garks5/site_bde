{% extends 'base.html.twig' %}

{% block title %}BDE CESI LILLE{% endblock %}
{% block stylesheets %}
<link href="event.css" rel="stylesheet" >
{% endblock %}

{% block body %}
<div id="event">
    <h1>Envie de vous amuser ? </h1><br>


    {% if  events is defined %}
        {% for event in events %}
            <div class="card bg-primary" >
                <!--Ajouter balise a-->
                <div class="card-header">{{event.date}}, lieu
                </div>
                <div class="card-body">
                    <h4 class="card-title">Titre de l'activité</h4>
                    <p class="card-text">Quelques exemples de texte rapides à construire sur le titre de la carte et constituant la majeure partie du contenu de la carte.</p>
                </div>
            </div>

        {% endfor %}
    {% endif %}
</div>
{% endblock %}